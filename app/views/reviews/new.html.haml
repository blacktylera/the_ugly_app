%div(class="spot_page_add_new_review")
  %div(class="container add_review_page_container")
    %div(class="row")
      %div(div class="col-md-12 add_new_review_content")
          = simple_form_for @spot do |f|
          = f.simple_fields_for :reviews do |g|
            %p="#{g.object.kind}"
            =g.input :content
            =g.input :kind, as: :hidden
          = f.button :submit, "Add your spot!", class: "btn btn-primary"




