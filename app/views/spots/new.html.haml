= simple_form_for @spot do |f|
  = f.input :name
  = f.input :img_url
  = f.input :address
  = f.input :phone
  = f.select :category, ["Bar/Restaurant", "Entertainment", "Other"]
  = f.simple_fields_for :reviews do |g|
    %p="#{g.object.kind}"
    =g.input :content
    =g.input :kind, as: :hidden
  = f.button :submit, "Add your spot!"



/ accepts_nested_attributes_for :reviews